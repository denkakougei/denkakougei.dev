---
import WorkList from "../../components/WorkList/WorkList.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getWorks } from "../../lib/microcms";

const data = await getWorks();
const works = data.contents;
---

<BaseLayout title="Works | 電化工藝">
	<div class="mainContentInner">
		<div class="heading">
			<h1>Works</h1>
		</div>
		<WorkList works={works} />
	</div>
</BaseLayout>

<style>
	.mainContentInner {
		inline-size: 100%;
		display: block grid;
		gap: var(--spacing-8);
		grid-template-areas: 
			"heading"
			"workList";
		grid-template-rows: auto 1fr;
		
		.heading {
			grid-area: heading;
		}
		.workList {
			grid-area: workList;
		}
	}
</style>